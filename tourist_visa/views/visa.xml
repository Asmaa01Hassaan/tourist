<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="visa_view_form" model="ir.ui.view">
            <field name="name">visa_view_form</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Visa Form">
                    <sheet>
                        <div class="oe_title">
                            <label for="visa_code" class="oe_edit_only"/>
                            <h1>
                                <field name="visa_code" class="mb-3"/>
                            </h1>
                        </div>


                        <notebook colspan="4">
                            <page string="Tourist Information" name="contact_info">
                                <div class="form-row">
                                    <label class="o_form_label" for="fname" string="Name"/>
                                    <div class="col-7">
                                        <field name="fname" class="form-control" placeholder="First Name"/>
                                    </div>
                                    <div class="col">
                                        <field name="mname" class="form-control" placeholder="Middle Name"/>
                                    </div>
                                    <div class="col">
                                        <field name="lname" class="form-control" placeholder="Last Name"/>
                                    </div>

                                </div>
                                <group>
                                    <field name="name"/>
                                    <field name="passport_number"/>
                                    <field name="nationality_id"/>
                                </group>

                            </page>
                            <page string="Visa Information" name="visa_info">
                                <group>
                                    <field name="status"/>
                                    <field name="visa_type"/>
                                    <field name="issue_date"/>
                                    <field name="expiry_date"/>
                                    <field name="country_id"/>
                                    <field name="destenation"/>
                                </group>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="visa_list" model="ir.ui.view">
            <field name="name">tourist_visa.list</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <tree string="Visa List">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="visa_action_window">
            <field name="name">Tourist Visa</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('my_visa','=', True)]</field>
            <field name="context">{'default_my_visa': True}</field>
        </record>

        <record id="tourist_visa.action_window_tree_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="visa_list"/>
            <field name="act_window_id" ref="visa_action_window"/>
        </record>
        <record id="tourist_visa.action_window_form_view" model="ir.actions.act_window.view">
            <field eval="3" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tourist_visa.visa_view_form"/>
            <field name="act_window_id" ref="visa_action_window"/>
        </record>

        <!-- Top menu item -->

        <menuitem name="Tourist Visa" id="tourist_visa.menu_root"/>

        <!-- menu categories -->

        <menuitem name="List" id="tourist_visa.menu_1_list" parent="tourist_visa.menu_root"
                  action="visa_action_window" sequence="2"/>

    </data>
</odoo>
